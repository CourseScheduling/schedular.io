extends __template

block headContent
	style.
		#controls__container{
			width: 90%;
			margin: auto;
			margin-top: 30px;
			max-width: 600px;
			display: block;
		}
			#controls__sortWrap{
				width: 110px;
				float: left;
			}
				.sort__label{
					width: 150px;
					text-align: center;
					margin-top: 30px;
					color: #999;
					font-family: Open Sans;
					font-size: 9pt;
				}
					.sort__label--top{
						margin-top: 0;
					}
				.sort__container{
					width: 150px;
					height: 30px;
					float: left;
					position: relative;
				}
					.sort__bar{
						width: 100%;
						height: 2px;
						position: absolute;
						top: 50%;
						margin-top: -1px;
						left: 0px;
						background-color: #52B3D9;
					}
					.sort__nub{
						position: absolute;
						top: 0px;
						left: calc(50% - 15px);
						width: 30px;
						height: 30px;
						box-shadow: 0px 0px 3px #999;
						border-radius: 30px;
						background-color: #FFF;
					}
			#controls__filterWrap{
				float: right;
				width: 110px;
			}
				.filter__row{
				}
				.filter__label{
				
				}
block bodyContent
	div#controls__container
		div#controls__sortWrap
			div.sort__label.sort__label--top START TIME
			div.sort__container
				div.sort__bar
				div.sort__nub
			br
			div.sort__label DENSITY
			div.sort__container
				div.sort__bar
				div.sort__nub
		div#controls__filterWrap